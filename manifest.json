{
    "manifest_version": 3,
    "name": "Google Calendar Time Tracker",
    "version": "1.0",
    "description": "Track time in Google Calendar",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "img/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://calendar.google.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}